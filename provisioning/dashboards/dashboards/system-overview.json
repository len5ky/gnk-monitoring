{
  "id": null,
  "uid": "system-overview",
  "title": "System Overview",
  "tags": ["system", "metrics", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=\"system_metrics\"}, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      },
      {
        "name": "instance_role",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=\"system_metrics\"}, instance_role)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Active Instances",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count(count_over_time({kind=\"system_metrics\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Metrics (Last Hour)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=\"system_metrics\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"}[1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "System Metrics - Click to Expand & Copy",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 22, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
