{
  "id": null,
  "uid": "connectivity-monitor",
  "title": "Connectivity Monitor",
  "tags": ["connectivity", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"}, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      },
      {
        "name": "instance_role",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"}, instance_role)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      },
      {
        "name": "node",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"}, node)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "label": "Node"
      },
      {
        "name": "name",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"}, name)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "label": "Check Name"
      },
      {
        "name": "status",
        "type": "custom",
        "query": "ok,error",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Failed Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=\"error\"} [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Successful Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=\"ok\"} [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\", kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\"} [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Success Rate %",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\", kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=\"ok\"} [5m])) / sum(count_over_time({compose_service=\"connectivity-checker\", kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\"} [5m])) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Connectivity Status Summary",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\", kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=~\"$status\"} | json",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "json",
            "keepTime": true
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Line": true,
              "labels": true,
              "id": true,
              "tsNs": true,
              "ts": true,
              "host": true
            },
            "renameByName": {
              "Time": "Timestamp",
              "instance_id": "Instance",
              "node": "Node",
              "name": "Check Name",
              "kind": "Type",
              "status": "Status",
              "latency_s": "Latency (s)",
              "url": "URL",
              "error": "Error",
              "detail": "Details"
            },
            "indexByName": {
              "Time": 0,
              "instance_id": 1,
              "node": 2,
              "name": 3,
              "kind": 4,
              "status": 5,
              "latency_s": 6,
              "url": 7
            }
          }
        },
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "Instance": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Node": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Check Name": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Type": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Status": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Latency (s)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "URL": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Timestamp": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              }
            }
          }
        }
      ]
    },
    {
      "type": "logs",
      "title": "All Connectivity Logs (Click to Expand)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=~\"$status\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "type": "logs",
      "title": "Errors Only (Click to Expand)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", node=~\"$node\", name=~\"$name\", status=\"error\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
