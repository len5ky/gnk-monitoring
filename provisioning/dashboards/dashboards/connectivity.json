{
  "id": null,
  "uid": "connectivity-monitor",
  "title": "Connectivity Monitor",
  "tags": ["connectivity", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=~\"ping|http\"}, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      },
      {
        "name": "instance_role",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=~\"ping|http\"}, instance_role)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      },
      {
        "name": "node",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "{kind=~\"ping|http\"} | json | label_format node=\"{{.node}}\" | label_values(node)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      },
      {
        "name": "name",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "{kind=~\"ping|http\"} | json | label_format check_name=\"{{.name}}\" | label_values(check_name)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      },
      {
        "name": "status",
        "type": "custom",
        "query": "ok,error",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Failed Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", status=\"error\"} | json | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Successful Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", status=\"ok\"} | json | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"} | json | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Success Rate %",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", status=\"ok\"} | json | node=~\"$node\" | name=~\"$name\" [5m])) / sum(count_over_time({kind=~\"ping|http\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"} | json | node=~\"$node\" | name=~\"$name\" [5m])) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "All Connectivity Checks - Click to Expand & Copy",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 15, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "{kind=~\"ping|http|error\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\", status=~\"$status\"} | json | node=~\"$node\" | name=~\"$name\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "type": "logs",
      "title": "Errors Only - Click to Expand & Copy",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 19 },
      "targets": [
        {
          "expr": "{kind=~\"ping|http|error\", status=\"error\", instance_id=~\"$instance_id\", instance_role=~\"$instance_role\"} | json | node=~\"$node\" | name=~\"$name\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
