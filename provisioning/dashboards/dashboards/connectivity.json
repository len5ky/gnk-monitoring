{
  "id": null,
  "uid": "connectivity-monitor",
  "title": "Connectivity Monitor",
  "tags": ["connectivity", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"} | json | __error__=\"\", instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      },
      {
        "name": "instance_role",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({compose_service=\"connectivity-checker\"} | json | __error__=\"\", instance_role)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1
      },
      {
        "name": "node",
        "type": "custom",
        "query": ".*",
        "includeAll": true,
        "multi": false,
        "current": { "text": "All", "value": ".*" }
      },
      {
        "name": "name",
        "type": "custom",
        "query": ".*",
        "includeAll": true,
        "multi": false,
        "current": { "text": "All", "value": ".*" }
      },
      {
        "name": "status",
        "type": "custom",
        "query": "ok,error",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Failed Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\"} | json | __error__=\"\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | status=\"error\" | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Successful Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\"} | json | __error__=\"\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | status=\"ok\" | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Checks (Last 5min)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\"} | json | __error__=\"\" | kind=~\"ping|http\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | node=~\"$node\" | name=~\"$name\" [5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Success Rate %",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({compose_service=\"connectivity-checker\"} | json | __error__=\"\" | kind=~\"ping|http\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | status=\"ok\" | node=~\"$node\" | name=~\"$name\" [5m])) / sum(count_over_time({compose_service=\"connectivity-checker\"} | json | __error__=\"\" | kind=~\"ping|http\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | node=~\"$node\" | name=~\"$name\" [5m])) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Connectivity Status Summary",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\"} | json | __error__=\"\" | kind=~\"ping|http\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | status=~\"$status\" | node=~\"$node\" | name=~\"$name\" | line_format `{{.instance_id}}|{{.node}}|{{.name}}|{{.kind}}|{{.status}}|{{printf \"%.3f\" .latency_s}}|{{.url}}{{.host}}|{{.error}}{{.note}}`",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Line": true,
              "labels": true,
              "id": true,
              "tsNs": true
            },
            "renameByName": {
              "Time": "Timestamp",
              "Field 1": "Instance",
              "Field 2": "Node",
              "Field 3": "Check Name",
              "Field 4": "Type",
              "Field 5": "Status",
              "Field 6": "Latency (s)",
              "Field 7": "Target",
              "Field 8": "Details"
            }
          }
        },
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "Instance": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Node": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Check Name": {
                "aggregations": [],
                "operation": "groupby"
              },
              "Type": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Status": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Latency (s)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Target": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Details": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Timestamp": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              }
            }
          }
        },
        {
          "id": "limit",
          "options": {
            "limitField": 100
          }
        }
      ]
    },
    {
      "type": "logs",
      "title": "All Connectivity Logs (Click to Expand)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\"} | json | __error__=\"\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | status=~\"$status\" | node=~\"$node\" | name=~\"$name\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "type": "logs",
      "title": "Errors Only (Click to Expand)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "{compose_service=\"connectivity-checker\"} | json | __error__=\"\" | status=\"error\" | instance_id=~\"$instance_id\" | instance_role=~\"$instance_role\" | node=~\"$node\" | name=~\"$name\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
