{
  "id": null,
  "uid": "gpu-metrics",
  "title": "GPU Metrics (NVIDIA)",
  "tags": ["prometheus", "gpu", "nvidia"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(nvidia_smi_gpu_info, instance_id)",
        "query": "label_values(nvidia_smi_gpu_info, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "sort": 1,
        "label": "Instance"
      },
      {
        "name": "gpu_uuid",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(nvidia_smi_gpu_info{instance_id=~\"$instance_id\"}, uuid)",
        "query": "label_values(nvidia_smi_gpu_info{instance_id=~\"$instance_id\"}, uuid)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "sort": 1,
        "label": "GPU UUID"
      }
    ]
  },
  "panels": [
    {
      "type": "gauge",
      "title": "GPU Utilization %",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_smi_utilization_gpu_ratio{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} * 100",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "gauge",
      "title": "GPU Memory Utilization %",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_smi_utilization_memory_ratio{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} * 100",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "gauge",
      "title": "GPU Temperature (Â°C)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_smi_temperature_gpu{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"}",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Utilization Over Time",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "nvidia_smi_utilization_gpu_ratio{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} * 100",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Memory Usage (GB)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "nvidia_smi_memory_used_bytes{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{instance_id}} - {{name}} (Used)",
          "refId": "A"
        },
        {
          "expr": "nvidia_smi_memory_total_bytes{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{instance_id}} - {{name}} (Total)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "min": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Temperature",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "nvidia_smi_temperature_gpu{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"}",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Power Draw (Watts)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "expr": "nvidia_smi_power_draw_watts{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"}",
          "legendFormat": "{{instance_id}} - {{name}}",
          "refId": "A"
        },
        {
          "expr": "nvidia_smi_power_limit_watts{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"}",
          "legendFormat": "{{instance_id}} - {{name}} (Limit)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "min": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "table",
      "title": "GPU Information",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 25 },
      "targets": [
        {
          "expr": "nvidia_smi_gpu_info{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "renameByName": {
              "instance_id": "Instance",
              "name": "GPU Name",
              "uuid": "UUID",
              "compute_cap": "Compute Capability",
              "driver_version": "Driver Version",
              "vbios_version": "VBIOS"
            },
            "indexByName": {
              "instance_id": 0,
              "name": 1,
              "uuid": 2,
              "compute_cap": 3,
              "driver_version": 4
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    },
    {
      "type": "stat",
      "title": "Memory Used",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 33 },
      "targets": [
        {
          "expr": "nvidia_smi_memory_used_bytes{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1024 / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "decimals": 2
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name"
      }
    },
    {
      "type": "stat",
      "title": "Memory Total",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 33 },
      "targets": [
        {
          "expr": "nvidia_smi_memory_total_bytes{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1024 / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "decimals": 2
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name"
      }
    },
    {
      "type": "stat",
      "title": "Clock Speed (Graphics)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 33 },
      "targets": [
        {
          "expr": "nvidia_smi_clocks_current_graphics_clock_hz{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1000000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "hertz",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name"
      }
    },
    {
      "type": "stat",
      "title": "Clock Speed (Memory)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 33 },
      "targets": [
        {
          "expr": "nvidia_smi_clocks_current_memory_clock_hz{instance_id=~\"$instance_id\", uuid=~\"$gpu_uuid\"} / 1000000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "hertz",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "textMode": "value_and_name"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
