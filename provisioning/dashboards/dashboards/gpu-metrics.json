{
  "id": null,
  "uid": "gpu-metrics",
  "title": "GPU Metrics (NVIDIA)",
  "tags": ["prometheus", "gpu", "nvidia"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-1h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(nvidia_gpu_info, instance_id)",
        "query": "label_values(nvidia_gpu_info, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "sort": 1
      },
      {
        "name": "gpu",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(nvidia_gpu_info{instance_id=~\"$instance\"}, minor_number)",
        "query": "label_values(nvidia_gpu_info{instance_id=~\"$instance\"}, minor_number)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "refresh": 1,
        "sort": 3
      }
    ]
  },
  "panels": [
    {
      "type": "gauge",
      "title": "GPU Utilization %",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_gpu_utilization_gpu{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "gauge",
      "title": "GPU Memory Utilization %",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_gpu_utilization_memory{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "gauge",
      "title": "GPU Temperature (Â°C)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "nvidia_gpu_temperature_celsius{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Utilization Over Time",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "nvidia_gpu_utilization_gpu{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "calcs": ["mean", "lastNotNull", "max"],
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Memory Usage",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "nvidia_gpu_memory_used_bytes{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}} Used",
          "refId": "A"
        },
        {
          "expr": "nvidia_gpu_memory_total_bytes{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}} Total",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "calcs": ["mean", "lastNotNull", "max"],
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Temperature Over Time",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "nvidia_gpu_temperature_celsius{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "calcs": ["mean", "lastNotNull", "max"],
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "GPU Power Draw",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
      "targets": [
        {
          "expr": "nvidia_gpu_power_draw_watts{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "legendFormat": "{{instance_id}} - GPU {{minor_number}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": {
          "calcs": ["mean", "lastNotNull", "max"],
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "table",
      "title": "GPU Information",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "nvidia_gpu_info{instance_id=~\"$instance\", minor_number=~\"$gpu\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Value": true,
              "__name__": true,
              "job": true
            },
            "renameByName": {
              "instance_id": "Instance",
              "instance_role": "Role",
              "minor_number": "GPU ID",
              "name": "GPU Model",
              "uuid": "GPU UUID"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    }
  ],
  "editable": true
}

