{
  "id": null,
  "uid": "system-metrics",
  "title": "System Metrics",
  "tags": ["system", "metrics", "performance"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=\"system_metrics\"}, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Active Instances",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "count(count_over_time({kind=\"system_metrics\", instance_id=~\"$instance_id\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Total Metrics (Last Hour)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(count_over_time({kind=\"system_metrics\", instance_id=~\"$instance_id\"}[1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "Latest System Metrics (Click to Expand)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "type": "table",
      "title": "Current System State - Per Instance",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "instance_id",
            "desc": false
          }
        ]
      },
      "transformations": [
        {
          "id": "reduce",
          "options": {
            "reducers": ["lastNotNull"]
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "Line": true,
              "id": true,
              "labels": true,
              "tsNs": true,
              "kind": true,
              "ts": true,
              "compose_project": true,
              "compose_service": true,
              "container": true,
              "job": true,
              "log_stream": true
            },
            "indexByName": {
              "instance_id": 0,
              "instance_role": 1,
              "memory_MemTotal": 2,
              "memory_MemAvailable": 3,
              "memory_MemFree": 4,
              "cpu_user": 5,
              "cpu_system": 6,
              "cpu_idle": 7
            },
            "renameByName": {
              "instance_id": "Instance",
              "instance_role": "Role",
              "memory_MemTotal": "RAM Total (KB)",
              "memory_MemAvailable": "RAM Available (KB)",
              "memory_MemFree": "RAM Free (KB)",
              "cpu_user": "CPU User",
              "cpu_system": "CPU System",
              "cpu_idle": "CPU Idle"
            }
          }
        }
      ]
    },
    {
      "type": "table",
      "title": "GPU Information - Per Instance",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json | line_format \"{{.instance_id}} | GPU: {{.gpu_gpus_0_name}} | Memory: {{.gpu_gpus_0_memory_used_mb}}/{{.gpu_gpus_0_memory_total_mb}} MB | Utilization: {{.gpu_gpus_0_utilization_percent}}%\"",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "limit",
          "options": {
            "limitField": 50
          }
        }
      ]
    },
    {
      "type": "table",
      "title": "Process Samples - All Instances",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 34 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json | line_format \"Instance: {{.instance_id}} | PID: {{.process_samples_0_pid}} | Command: {{.process_samples_0_cmdline}} | CPU: {{.process_samples_0_utime}}+{{.process_samples_0_stime}} | RSS: {{.process_samples_0_rss_pages}} pages\"",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Line",
            "desc": false
          }
        ]
      },
      "transformations": [
        {
          "id": "limit",
          "options": {
            "limitField": 100
          }
        }
      ]
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
