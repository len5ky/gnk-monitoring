{
  "id": null,
  "uid": "system-metrics",
  "title": "System Resources",
  "tags": ["system", "metrics", "performance"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-5m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "instance_id",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values({kind=\"system_metrics\"}, instance_id)",
        "includeAll": true,
        "multi": true,
        "current": { "text": "All", "value": ["$__all"] },
        "regex": "",
        "refresh": 1
      }
    ]
  },
  "panels": [
    {
      "type": "table",
      "title": "System Resources Overview",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json | line_format `{{ .instance_id }}|{{ .instance_role }}|{{ div .memory_MemTotal 1048576.0 | printf \"%.1f\" }}|{{ div .memory_MemAvailable 1048576.0 | printf \"%.1f\" }}|{{ div (sub .memory_MemTotal .memory_MemAvailable) 1048576.0 | printf \"%.1f\" }}|{{ mul (div (sub .memory_MemTotal .memory_MemAvailable) .memory_MemTotal) 100.0 | printf \"%.1f\" }}|{{ add .cpu_user .cpu_system .cpu_iowait }}|{{ .cpu_idle }}|{{ div (mul (add .cpu_user .cpu_system .cpu_iowait) 100.0) (add .cpu_user .cpu_system .cpu_iowait .cpu_idle) | printf \"%.1f\" }}|{{ .gpu_gpus_0_name }}|{{ .gpu_gpus_0_memory_total_mb }}|{{ .gpu_gpus_0_memory_used_mb }}|{{ .gpu_gpus_0_utilization_percent }}`",
          "refId": "A"
        }
      ],
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": {
          "show": false
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Line"
            },
            "properties": [
              {
                "id": "custom.hidden",
                "value": true
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Time"
            },
            "properties": [
              {
                "id": "custom.width",
                "value": 180
              }
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto",
            "replace": false,
            "keepTime": true
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Line": true,
              "labels": true,
              "id": true,
              "tsNs": true
            },
            "indexByName": {},
            "renameByName": {
              "Time": "Last Update",
              "Field 1": "Instance",
              "Field 2": "Role",
              "Field 3": "RAM Total (GB)",
              "Field 4": "RAM Available (GB)",
              "Field 5": "RAM Used (GB)",
              "Field 6": "RAM Used %",
              "Field 7": "CPU Active",
              "Field 8": "CPU Idle",
              "Field 9": "CPU Usage %",
              "Field 10": "GPU Model",
              "Field 11": "GPU Mem Total (MB)",
              "Field 12": "GPU Mem Used (MB)",
              "Field 13": "GPU Usage %"
            }
          }
        },
        {
          "id": "groupBy",
          "options": {
            "fields": {
              "Instance": {
                "aggregations": ["lastNotNull"],
                "operation": "groupby"
              },
              "Role": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "RAM Total (GB)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "RAM Available (GB)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "RAM Used (GB)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "RAM Used %": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "CPU Active": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "CPU Idle": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "CPU Usage %": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "GPU Model": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "GPU Mem Total (MB)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "GPU Mem Used (MB)": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "GPU Usage %": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              },
              "Last Update": {
                "aggregations": ["lastNotNull"],
                "operation": "aggregate"
              }
            }
          }
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "RAM Usage by Instance",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json | line_format `{{ .instance_id }}: {{ mul (div (sub .memory_MemTotal .memory_MemAvailable) .memory_MemTotal) 100.0 | printf \"%.1f\" }}`",
          "refId": "A",
          "legendFormat": "{{instance_id}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "bargauge",
      "title": "CPU Usage by Instance",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"} | json | line_format `{{ .instance_id }}: {{ div (mul (add .cpu_user .cpu_system .cpu_iowait) 100.0) (add .cpu_user .cpu_system .cpu_iowait .cpu_idle) | printf \"%.1f\" }}`",
          "refId": "A",
          "legendFormat": "{{instance_id}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "Raw Metrics (Click to Expand for Full Details)",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "{kind=\"system_metrics\", instance_id=~\"$instance_id\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": true
      }
    ]
  },
  "editable": true
}
